{
    //modify the target and load lines for your elf file
    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "attach",
            "name": "(gdb) Launch GDB (Redux)",
            "target": "localhost:3333",
            "remote": true,
            "executable": "obj_psx_dev/_mgsi.elf",
            "preLaunchTask": "run_pcsxr",
            "linux": {
                "gdbpath": "/usr/bin/gdb-multiarch",
            },
            "windows": {
                "gdbpath": "C:/gdb-multiarch-12.1/bin/gdb.exe",
            },
            "cwd": "${workspaceRoot}",
            "autorun": [
                "set substitute-path /project .",
                "monitor reset shellhalt",
                "load obj_psx_dev/_mgsi.elf",
            ],
            "valuesFormatting": "parseText"
        }
    ]
}
